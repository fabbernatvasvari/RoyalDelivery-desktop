<UserControl x:Class="RoyalDelivery.Views.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <StackPanel Margin="10">
        <TextBlock Text="Felhasználók listája" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
        <DataGrid ItemsSource="{Binding Users}" AutoGenerateColumns="False" Height="300">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Név" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
                <DataGridTextColumn Header="Jelszó" Binding="{Binding Password}" />
                <DataGridTextColumn Header="Bankkártya szám" Binding="{Binding CardNumber}" />
                <DataGridTextColumn Header="Számlázási cím" Binding="{Binding BillingAddress}" />
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>
