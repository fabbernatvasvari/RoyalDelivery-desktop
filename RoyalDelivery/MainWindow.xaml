<Window x:Class="RoyalDelivery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:RoyalDelivery"
        xmlns:viewmodel="clr-namespace:RoyalDelivery.ViewModels"
        xmlns:view="clr-namespace:RoyalDelivery.Views"
        mc:Ignorable="d"
        Title="Royal Delivery™ – Admin"
        Height="800"
        Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <viewmodel:MainWindowViewModel />
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodel:RestaurantViewModel}">
            <view:RestaurantView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewmodel:MealViewModel}">
            <view:MealView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodel:OrderViewModel}">
            <view:OrderView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodel:UserViewModel}">
            <view:UserView />
        </DataTemplate>
    </Window.Resources>

    <DockPanel>

        <!-- Top menu -->
        <Menu Name="FelsoMenu" DockPanel.Dock="Top">
            <MenuItem Header="Főmenüpont">
                <MenuItem Header="Éttermek" Command="{Binding ShowRestaurantViewCommand}" />
                <MenuItem Header="Ételek" Command="{Binding ShowMealViewCommand}" />
                <MenuItem Header="Rendelések" Command="{Binding ShowOrderViewCommand}" />
                <MenuItem Header="Felhasználók" Command="{Binding ShowUserViewCommand}" />
            </MenuItem>
        </Menu>


        <ContentControl Content="{Binding CurrentView}" />

    </DockPanel>
</Window>
