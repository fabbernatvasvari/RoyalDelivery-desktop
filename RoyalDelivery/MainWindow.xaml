<Window x:Class="RoyalDelivery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoyalDelivery"
        mc:Ignorable="d"
        Title="Royal Delivery – Admin" Height="800" Width="1200" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <TextBox Text="Összes rendelés: 1284" FontSize="20" FontWeight="Bold" />
            <TextBox Text="Budapest, Andrássy út 12." Background="LightGray" IsReadOnly="True" BorderThickness="0"/>
            <DataGrid AutoGenerateColumns="True" IsReadOnly="True" CanUserAddRows="False" HeadersVisibility="Column" />
            <ListView Height="200" Width="300"/>
            <TreeView Width="250" />
            <ProgressBar Minimum="0" Maximum="100" Value="65" Height="20"/>
            <CheckBox Content="Kiszállítva"/>
            <RadioButton Content="Aktív"/>
            <GroupBox Header="Rendelés adatai">
                <StackPanel>
                    <TextBlock Text="Rendelés ID: 123"/>
                    <TextBox Text="Budapest, Andrássy út 12." IsReadOnly="True" BorderThickness="0"/>
                    <ProgressBar Minimum="0" Maximum="100" Value="65" Height="20"/>
                </StackPanel>
            </GroupBox>
            <ScrollViewer Height="200" Width="400">
                <StackPanel>
                    <TextBlock Text="Görgethető adat 1"/>
                    <TextBlock Text="Görgethető adat 2"/>
                    <TextBlock Text="Görgethető adat 3"/>
                    <TextBlock Text="Görgethető adat 4"/>
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
